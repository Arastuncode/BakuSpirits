@model Category
@{
    ViewData["Title"] = "Create";
}
<div class="container ms-4 mt-5">
    <div class="ms-12">
        <form class="forms-sample" method="post" asp-controller="Category" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label class="mt-2" asp-for="Name"></label>
                <textarea class="form-control form-control-sm mt-1" type="text" asp-for="Name" id="editorid"></textarea>
                <span asp-validation-for="Name" class="text-danger"></span>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace("editorid");</script>
}
