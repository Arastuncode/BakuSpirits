@model List<About>
@{
    ViewData["Title"] = "About";
    int count = 1;
}
<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>About</h3>
            <div>
                <a class="btn btn-success" asp-controller="About" asp-action="Create">Create</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped bg-gradient-info rounded">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Text
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                <div class="image">
                                    <img src="~/assets/img//@item.Image" style="width:180px;height:150px;" />
                                </div>
                            </td>
                            <td>
                                <p style="width:18rem;">@Html.Raw(item.Text)</p>
                            </td>
                            <td>
                                <a class="btn btn-primary mt-3" asp-action="Detail" asp-route-id="@item.Id">
                                    Detail
                                </a>
                                <a class="btn btn-warning mt-3" asp-action="Edit" asp-route-id="@item.Id">
                                    Edit
                                </a>
                                <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                    <button class="btn btn-danger mt-3" type="submit">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
