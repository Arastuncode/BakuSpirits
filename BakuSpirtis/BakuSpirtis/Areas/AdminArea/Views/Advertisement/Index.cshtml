@model List<Advertisment>
@{
    ViewData["Title"] = "Slider";
    int count = 1;
}
<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>Advertisment</h3>
            <div>
                <a class="btn btn-success" asp-controller="Advertisement" asp-action="Create">Create</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            Video
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                <video class="img-fluid rounded-sm " autoplay loop muted>
                                    <source src="~/assets/video/@item.Video" type="video/mp4" class="rounded-sm" />
                                </video>
                            </td>
                            <td>
                                <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                    <button class="btn btn-danger" type="submit">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>


