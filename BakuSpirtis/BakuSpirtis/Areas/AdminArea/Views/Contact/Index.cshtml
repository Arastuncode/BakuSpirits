@model List<Contact>
@{
    ViewData["Title"] = "About";
    int count = 1;
}
<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>Contact</h3>
            <div>
                <a class="btn btn-success" asp-controller="Contact" asp-action="Create">Create</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Phone
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-danger">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                <p style="width:18rem;">@Html.Raw(item.Address)</p>
                            </td>
                            <td>
                                <p style="width:18rem;">@Html.Raw(item.Email)</p>
                            </td>
                            <td>
                                <p style="width:18rem;">@Html.Raw(item.Phone)</p>
                            </td>
                           
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
