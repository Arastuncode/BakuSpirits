@model ProductEditVM
@{
    ViewData["Title"] = "Edit"; 
}
<div class="container mt-5">
    <div class="row">
        <div class="image">
            <input type="hidden" class="product-id" value="@Model.Id" />
            @foreach (var item in Model.Images)
            {
                <img src="~/assets/img/@item.Image" alt="Product" style="width:150px;height:150px;" />
                if (item.IsMain)
                {
                    <button class="btn btn-danger" disabled>Default</button>
                }
                else
                {
                    <button class="btn btn-success set-default" data-id="@item.Id">Set default</button>
                }
            }
        </div>
    </div>
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <div class="form-group">
                <label asp-for="Photos">Images:</label>
                <input class="form-control" style="width:300px" asp-for="Photos">
                <span class="text-danger" asp-validation-for="Photos"></span>
            </div>
            <label asp-for="Name">Name: </label>
            <textarea class="form-control form-control-sm mt-1" type="text" asp-for="Name" id="editorid"></textarea>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId">Categories: </label>
            <select class="form-control" style="width:300px" asp-for="CategoryId" asp-items="@ViewBag.categories"></select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace("editorid");</script>
}


