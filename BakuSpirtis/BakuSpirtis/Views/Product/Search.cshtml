 
@model IList<Product>
@{
    ViewData["Title"] = "Məhsullarımız";
}

<main>
    <section id="product-area">
        <div class="container   mt-5">
            <div class="row">
                <div class="col-sm-9 col-lg-9 col-md-9 col-xs-9">
                    <div id="products">
                        <div class="container">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-sm mt-3 me-5">
                                        <div class="product-item content text-center">
                                            <div class="img me-5" style="width: 17rem;">
                                                <img src="~/assets/img/@item.ProductImages" class="img-fluid " alt="@Html.Raw(item.Name)">
                                            </div>
                                            <div class="title  mt-3">
                                                <h6>@Html.Raw(item.Name)</h6>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>
