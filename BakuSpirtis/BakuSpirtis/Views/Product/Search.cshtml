@model List<Product>
@{
    ViewData["Title"] = "Məhsullarımız";
}

<main>
    <section id="product-area">
        <div class="container   mt-5">
            <div class="row">
                <div id="products">
                    <div class="container">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 mt-3 me-5">
                                    <div class="product-item content text-left ">
                                        <div class="img me-5" style="width: 17rem;">
                                            <img src="~/assets/img/@item.ProductImages.FirstOrDefault().Image" class="img-fluid " alt="">
                                        </div>
                                        <div class="title text-left  mt-3">
                                            <h6>@Html.Raw(item.Name)</h6>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>
