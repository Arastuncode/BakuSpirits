@model List<Product>
@{
    ViewData["Title"] = "Məhsullarımız";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Css{
    <link rel="stylesheet" href="~/assets/css/products.css">
}
<main>
    <section id="product-area">
        <div class="container   mt-5">
            <div class="search">
                <div class="row">
                    <div class="col-sm-5 col-xs-5 col-md-5 col-lg-5">
                        <div class="search-box ">
                            <form id="search" asp-controller="Product" asp-action="Search">
                                <input type="search" class="search   placeholder" placeholder="Search..." name="search" />
                                <button class="fal fa-search text-light" type="submit"></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
       
            <div id="products">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 mt-3 me-5">
                            <div class="product-item ">
                                <div class="img me-5" style="width: 17rem;">
                                    <img src="~/assets/img/@item.ProductImages.FirstOrDefault().Image" style="min-height:350px;" class="img-fluid " alt="">
                                </div>
                                <div class="title text-left  mt-3">
                                    <h6>@Html.Raw(item.Name)</h6>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </section>

</main>
