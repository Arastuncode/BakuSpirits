@model ForgotPasswordVM
@{
    ViewData["Title"] = "Forgot password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Css{
    <link rel="stylesheet" href="~/assets/css/login.css">
}

<main>
    <section id="login-area">
        <div class="container">
            <div class="login">
                <div class="row justify-content-center">
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 mt-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form method="post" asp-action="ForgotPassword">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label"></label>
                                <input type="text" class="form-control" asp-for="Email" placeholder="Email"
                                       aria-describedby="addon-wrapping">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <button type="submit" class="btn btn-primary ">Şifrəni göndər</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
@section Scripts{
    <partial name="_ValidationPartial" />
}