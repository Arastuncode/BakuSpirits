@model CompaniesVM
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="about">
        <div class="container">
            <div class="about">
                <div class="row">
                    @foreach (var item in Model.Companies)
                    {
                        <div class="col-sm-12 ">
                            <div class="image">
                                <img src="~/assets/img/@item.Image" class="img-fluid " alt="">
                            </div>
                        </div>
                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12  mt-3">
                            <p>@Html.Raw(item.Desc)</p>
                        </div>
                    }
                </div>
            </div>
            <div class="container">
                @*<div class="sides">
                    <div class="left"></div>
                    <div class="right"></div>
                </div>*@
                <div class="items">
                    @foreach (var item in Model.Corusels)
                    {
                        <div class="card" style="width: 30rem;">
                            <a href="detail.html"><img src="~/assets/img/@item.Image" alt="" /></a>
                        </div>
                    }
                    
                </div>
            </div>
            <!-- Video starts -->
            <div class="container mt-5">
                <div class="video">
                    <div class="row">
                        @foreach (var item in Model.CompanyVideos)
                        {
                            <div class="col  offset-md-2">
                                <div class="embed-responsive embed-responsive-16by9">
                                    <iframe class="embed-responsive-item img-fluid"
                                            src="~/assets/video/@item.Video"></iframe>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- Video end -->
            <div class="sertification mt-3">
                <h1 id="sertification">Sertifikatlarımız</h1>
                <div class="images">
                    <div class="row  d-flex justify-content-center mt-3">
                        @foreach (var item in Model.Sertifications)
                        {
                            <div class="col-sm-3 col-lg-3 col-md-3 col-xs-3 mt-2">
                                <img src="~/assets/img/@item.Image" alt="..." class="img-fluid hidden-image" id="hidden-image">
                            </div>
                        }
                       
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>